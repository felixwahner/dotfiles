#
# Shell Aliases
#

# Mac OS X only aliases
if [ `uname` == "Darwin" ]; then
    alias ls="ls -Gh"
    alias lock="open /System/Library/Frameworks/ScreenSaver.framework/Versions/A/Resources/ScreenSaverEngine.app"
    alias myip="ifconfig | grep broadcast | sed 's/.*inet \(.*\) netmask.*/\1/'"
fi

# Main commands
alias ll="ls -l"
alias la="ll -a"
alias lt="ll -t"

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias df="df -h"
alias du="du -h"

# confirmations
alias cp="cp -i"
alias rm="rm -i"

# misc aliases
alias top="top -o cpu"
alias hist="history"

# for RVM
alias ru="rvm use"
alias rg="rvm gemset"
alias rgu="rg use"
alias rgl="rg list"
alias rgc="rg create"
alias rgd="rg delete"
alias rgg="rgu global"
alias r30="rgu rails-3.0"
alias r31="rgu rails-3.1"

# for RubyGems
alias g="gem"
alias gl="g list"
alias gi="g install"
alias gu="g update"
alias gd="g uninstall"
alias gc="g cleanup"

# for Bundler
alias b="bundle"
alias bi="b install"
alias bu="b update"
alias be="b exec"
alias bp="b package"

# Use this to have all the gems and dependancies in the vendor dir of your app
# It's intended to use as an alternative to RVM gemsets
alias binit="bi --path vendor && bp && b --binstubs && echo 'vendor/ruby' >> .gitignore"

# reload shell
alias reload="source ~/.bashrc"

