#
# .irbrc
#

# Enable tab-completion.
require "irb/completion"

# Load some libraries
require "date"
require "time"

# Load external gems
gems = %w[rubygems ruby-debug awesome_print]
gems.each do |gem_name|
  begin
    require gem_name
  rescue LoadError
    puts "=> Unable to load #{gem_name}"
  end
end

# Enable prompt-less prompts
#IRB.conf[:PROMPT][:XMP][:RETURN] = "\# => %s\n"
#IRB.conf[:PROMPT][:XMP][:PROMPT_I] = ""
#IRB.conf[:PROMPT_MODE] = :XMP

IRB::Irb.class_eval do
  def output_value
    ap @context.last_value
  end
end if defined?(AwesomePrint)

# Auto-indentation.
IRB.conf[:AUTO_INDENT] = true

# Readline-enable prompts.
IRB.conf[:USE_READLINE] = true

# History settings
require "irb/ext/save-history"

IRB.conf[:HISTORY_FILE] = "#{ENV["HOME"]}/.irb_history"
IRB.conf[:SAVE_HISTORY] = 100
IRB.conf[:EVAL_HISTORY] = 100
IRB.conf[:AUTO_INDENT]  = true
IRB.conf[:USE_READLINE] = true

